.container {
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #3A86FF;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
}

.user-info {
  margin-bottom: 60rpx;
}

.btn-auth {
  background-color: #3A86FF;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  width: 100%;
}

.auth-tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 16rpx;
}

.role-selection {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.role-buttons {
  display: flex;
  justify-content: space-between;
}

.role-button {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin: 0 20rpx;
}

.role-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.role-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.role-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.footer {
  margin-top: 60rpx;
}

.copyright {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  display: block;
} 

