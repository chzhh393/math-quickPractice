.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 30rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.main-content {
  flex: 1;
}

.task-list {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.task-item:last-child {
  border-bottom: none;
}

.task-info {
  flex: 1;
}

.task-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.task-date {
  font-size: 24rpx;
  color: #999;
}

.task-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f0f0f0;
  color: #666;
}

.task-status.completed {
  background-color: #e6f7e6;
  color: #4caf50;
}

.task-status.in-progress {
  background-color: #e6f0ff;
  color: #3A86FF;
}

.no-tasks {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.no-tasks-icon {
  font-size: 80rpx;
  color: #ccc;
  margin-bottom: 20rpx;
}

.no-tasks-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.no-tasks-tip {
  font-size: 26rpx;
  color: #bbb;
}

.footer {
  padding: 30rpx 0;
}

.create-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #3A86FF;
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 0;
}

.button-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.button-text {
  font-size: 30rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3A86FF;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.task-header {
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.task-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-meta {
  display: flex;
  flex-direction: column;
}

.meta-item {
  display: flex;
  margin-bottom: 10rpx;
}

.meta-label {
  width: 160rpx;
  font-size: 26rpx;
  color: #666;
}

.meta-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

.problem-list {
  margin-bottom: 30rpx;
}

.problem-item {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.problem-item.completed {
  border-left: 8rpx solid #52c41a;
}

.problem-index {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #3A86FF;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.problem-content {
  flex: 1;
}

.problem-preview {
  margin-bottom: 10rpx;
}

.problem-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.problem-image {
  width: 100%;
  height: 160rpx;
}

.problem-placeholder {
  font-size: 28rpx;
  color: #999;
}

.problem-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.problem-type {
  font-size: 24rpx;
  color: #666;
}

.problem-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.problem-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #999;
  border-right: 3rpx solid #999;
  transform: rotate(45deg);
  margin-left: 20rpx;
}

.task-actions {
  margin-top: 40rpx;
  padding: 0 40rpx;
}

.btn-complete {
  background-color: #3A86FF;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  width: 100%;
}

.btn-complete.disabled {
  background-color: #ccc;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
} 

