.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.back-button {
  display: flex;
  align-items: center;
  padding: 10rpx;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #3A86FF;
}

.back-text {
  font-size: 28rpx;
  color: #3A86FF;
  margin-left: 5rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.main-content {
  flex: 1;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.error-message {
  background-color: #ffebee;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.error-icon {
  margin-right: 15rpx;
  font-size: 32rpx;
}

.error-text {
  font-size: 26rpx;
  color: #d32f2f;
}

.problem-navigation {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.nav-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.problem-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.task-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f0f0f0;
  color: #666;
}

.task-status.completed {
  background-color: #e6f7e6;
  color: #4caf50;
}

.task-status.in-progress {
  background-color: #e6f0ff;
  color: #3A86FF;
}

.nav-buttons {
  display: flex;
  justify-content: space-between;
}

.nav-button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 26rpx;
  padding: 10rpx 0;
  background-color: #f0f0f0;
  color: #666;
}

.nav-button[disabled] {
  color: #ccc;
  background-color: #f9f9f9;
}

.problem-container {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.problem-content {
  margin-bottom: 30rpx;
}

.problem-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.problem-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
}

.answer-section {
  margin-bottom: 30rpx;
}

.answer-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.answer-input {
  width: 100%;
  height: 200rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.submit-button {
  background-color: #3A86FF;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 0;
}

.solution-section {
  margin-top: 30rpx;
}

.solution-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.solution-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.solution-button {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  background-color: #4caf50;
  color: #fff;
  min-width: 160rpx;
}

.solution-content {
  background-color: #f0f8ff;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3A86FF;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.problem-container, .solution-container, .feedback-container {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.btn-secondary, .btn-primary {
  flex: 1;
  margin: 0 20rpx;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

/* 语音模式选择器 */
.voice-mode-selector {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
  background-color: #f0f0f0;
  border-radius: 40rpx;
  padding: 6rpx;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
}

.mode-option {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  transition: all 0.3s ease;
}

.mode-option.active {
  background-color: #3A86FF;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(58, 134, 255, 0.3);
}

/* 解题思路录制部分样式 */
.solution-recording-section {
  margin: 30rpx 0;
  padding: 30rpx;
  background-color: #f8f9ff;
  border-radius: 15rpx;
  border: 1rpx solid #e0e6ff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.solution-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #3A86FF;
  text-align: center;
  margin-bottom: 20rpx;
}

.solution-tip {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.recording-button-container {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.recording-button {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: linear-gradient(145deg, #ffffff, #f0f0f0);
  box-shadow: 10rpx 10rpx 20rpx #d9d9d9, -10rpx -10rpx 20rpx #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.recording-button.recording {
  background: linear-gradient(145deg, #ff5c5c, #ff3a3a);
  box-shadow: 10rpx 10rpx 20rpx #d93a3a, -10rpx -10rpx 20rpx #ff5c5c;
  transform: scale(1.05);
}

.recording-button-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.mic-icon {
  position: relative;
  width: 60rpx;
  height: 90rpx;
  margin-bottom: 20rpx;
}

.mic-body {
  position: absolute;
  top: 0;
  left: 15rpx;
  width: 30rpx;
  height: 60rpx;
  background-color: #3A86FF;
  border-radius: 15rpx 15rpx 5rpx 5rpx;
}

.recording-button.recording .mic-body {
  background-color: #fff;
}

.mic-base {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60rpx;
  height: 30rpx;
  background-color: #3A86FF;
  border-radius: 15rpx;
}

.recording-button.recording .mic-base {
  background-color: #fff;
}

.recording-text {
  font-size: 28rpx;
  color: #3A86FF;
  font-weight: bold;
}

.recording-button.recording .recording-text {
  color: #fff;
}

.recording-waves {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  pointer-events: none;
}

.wave {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  animation: wave-animation 2s infinite;
}

.wave1 {
  width: 100%;
  height: 100%;
  animation-delay: 0s;
}

.wave2 {
  width: 80%;
  height: 80%;
  animation-delay: 0.3s;
}

.wave3 {
  width: 60%;
  height: 60%;
  animation-delay: 0.6s;
}

@keyframes wave-animation {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0.8;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0;
  }
}

.recording-time {
  position: absolute;
  bottom: -40rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 26rpx;
  color: #ff3a3a;
  font-weight: bold;
}

/* 答案评估结果样式 */
.answer-result {
  margin: 30rpx 0;
  border-radius: 15rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.answer-result.correct {
  background-color: #f0fff0;
  border: 1rpx solid #d1ffd1;
}

.answer-result.incorrect {
  background-color: #fff0f0;
  border: 1rpx solid #ffd1d1;
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.result-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.answer-result.correct .result-icon {
  color: #4caf50;
}

.answer-result.incorrect .result-icon {
  color: #f44336;
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
}

.answer-result.correct .result-title {
  color: #4caf50;
}

.answer-result.incorrect .result-title {
  color: #f44336;
}

.result-section {
  margin-bottom: 20rpx;
}

.section-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
}

.section-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  background-color: rgba(255, 255, 255, 0.7);
  padding: 15rpx;
  border-radius: 8rpx;
} 

