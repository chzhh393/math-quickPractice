.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.back-button {
  margin-top: 30rpx;
  background-color: #4285f4;
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #3A86FF;
}

.back-text {
  font-size: 28rpx;
  color: #3A86FF;
  margin-left: 5rpx;
}

.task-info {
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.progress-container {
  display: flex;
  align-items: center;
}

progress {
  flex: 1;
}

.progress-text {
  margin-left: 15rpx;
  font-size: 24rpx;
  color: #666;
}

.problem-navigation {
  margin-top: 20rpx;
}

.problem-indicators {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.problem-indicator {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
  border-radius: 50%;
  font-size: 26rpx;
  color: #666;
}

.problem-indicator.active {
  background-color: #4285f4;
  color: white;
}

.problem-indicator.answered {
  background-color: #34a853;
  color: white;
}

.problem-container {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  flex: 1;
}

.problem-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.problem-number {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.problem-key {
  font-size: 26rpx;
  color: #999;
}

.problem-content {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border-left: 8rpx solid #4285f4;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.result-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.result-badge.correct {
  background-color: #e6f4ea;
  color: #137333;
}

.result-badge.incorrect {
  background-color: #fce8e6;
  color: #c5221f;
}

.footer {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #e6e6e6;
  background-color: #fff;
}

.nav-button {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.nav-button.prev {
  background-color: #f0f4f8;
  color: #4285f4;
  border: 1rpx solid #4285f4;
}

.nav-button.next {
  background-color: #4285f4;
  color: #fff;
}

.nav-button[disabled] {
  background-color: #f5f5f5;
  color: #bbb;
  border-color: #ddd;
}

.finish-button {
  background-color: #34a853;
  color: white;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  flex: 1;
  margin: 0 10rpx;
}

.loading-container, .error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4285f4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error-title {
  margin: 20rpx 0 10rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.error-message {
  margin: 10rpx 0 30rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  max-width: 80%;
}

.error-actions {
  display: flex;
  margin-top: 20rpx;
}

.retry-button, .back-button {
  margin: 0 10rpx;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.retry-button {
  background-color: #4285f4;
  color: white;
}

.back-button {
  background-color: #f0f0f0;
  color: #333;
}

/* 语音录制相关样式 */
.voice-answer-section {
  margin-bottom: 30rpx;
}

.voice-button-container {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}

.voice-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  background-color: #f1f3f4;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 2rpx 5rpx rgba(0,0,0,0.1);
}

.voice-button.recording {
  background-color: #ea4335;
  color: white;
}

.voice-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #4285f4;
  margin-right: 10rpx;
  position: relative;
}

.recording .voice-icon {
  background-color: white;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.8; }
  100% { transform: scale(1); opacity: 1; }
}

.recording-time {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.voice-result-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.voice-result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.voice-text, .voice-feedback, .error-details {
  margin-top: 15rpx;
}

.voice-text-title, .voice-feedback-title, .error-type, .specific-error {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
  display: block;
}

.voice-text-content, .voice-feedback-content {
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
}

/* 评估中效果 */
.evaluating-section {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.evaluating-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
}

.evaluating-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e6e6e6;
  border-top: 6rpx solid #4285f4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.evaluating-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 优化后的结果卡片样式 */
.result-card {
  margin: 20rpx 0;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.result-card-header {
  padding: 16rpx 24rpx;
  background-color: #f0f4f8;
  border-bottom: 1rpx solid #e0e6ed;
}

.result-card-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.result-card-content {
  padding: 20rpx 24rpx;
}

.result-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.error-item {
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
}

.error-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.error-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 语音按钮禁用状态 */
.voice-button[disabled] {
  opacity: 0.7;
  background-color: #e0e0e0;
} 

