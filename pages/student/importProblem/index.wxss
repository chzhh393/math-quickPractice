.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #4285f4;
  color: white;
}

.back-button {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}

/* 格式提示样式 */
.format-tips {
  margin: 10rpx 0 20rpx;
  padding: 15rpx;
  background-color: #e8f4fd;
  border-radius: 8rpx;
  border-left: 6rpx solid #4285f4;
}

.format-tips text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  font-family: monospace;
}

/* 输入区域样式 */
.input-section {
  margin-top: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-area {
  margin: 20rpx 0;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.json-input {
  width: 100%;
  min-height: 400rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  font-family: monospace;
}

.input-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

/* 预览区域样式 */
.preview-section {
  margin-top: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.problem-content {
  margin: 20rpx 0;
}

.problem-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

/* 多题目模式样式 */
.multi-problems-count {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}

.problems-list {
  max-height: 600rpx;
  margin-bottom: 30rpx;
}

.problem-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border-left: 6rpx solid #4285f4;
}

.problem-index {
  font-size: 28rpx;
  font-weight: bold;
  color: #4285f4;
  margin-bottom: 10rpx;
}

.problem-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
  white-space: pre-wrap;
}

/* 表格样式 */
.table-container {
  margin: 30rpx 0;
  overflow-x: auto;
}

.table {
  border-collapse: collapse;
  width: 100%;
  border: 1px solid #ddd;
}

.table-row {
  display: flex;
  border-bottom: 1px solid #ddd;
}

.table-row:last-child {
  border-bottom: none;
}

.table-cell {
  flex: 1;
  padding: 16rpx;
  text-align: center;
  font-size: 28rpx;
  border-right: 1px solid #ddd;
  min-width: 100rpx;
  word-break: break-all;
}

.table-cell:last-child {
  border-right: none;
}

/* 表格第一行样式 */
.table-row:first-child {
  background-color: #f2f2f2;
  font-weight: bold;
}

/* 问题列表样式 */
.questions-container {
  margin: 30rpx 0;
}

.question-item {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.question-index {
  font-weight: bold;
  color: #4285f4;
}

.question-text {
  color: #333;
}

.preview-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

/* 错误提示样式 */
.error-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #ffebee;
  border-radius: 8rpx;
  border-left: 6rpx solid #f44336;
}

.error-message {
  color: #d32f2f;
  font-size: 28rpx;
}

/* 按钮样式 */
.action-button {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
  color: #333;
  border: none;
  min-width: 160rpx;
  text-align: center;
}

.action-button.primary {
  background-color: #4285f4;
  color: white;
}

.action-button[disabled] {
  background-color: #f0f0f0;
  color: #bbb;
} 

