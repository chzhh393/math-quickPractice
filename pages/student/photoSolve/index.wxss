.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #4285f4;
  color: white;
}

.back-button {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.camera-section, .preview-section, .analyzing-section, .result-section {
  margin-top: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.camera-tip {
  text-align: center;
  color: #666;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

.camera-actions {
  display: flex;
  justify-content: space-around;
}

.preview-image {
  width: 100%;
  height: 500rpx;
  margin-bottom: 30rpx;
  background-color: #f0f0f0;
}

.preview-actions {
  display: flex;
  justify-content: space-around;
}

.analyzing-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #4285f4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.analyzing-text {
  color: #666;
  font-size: 28rpx;
}

.result-section {
  padding: 30rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-count {
  font-size: 24rpx;
  color: #666;
}

.problems-list {
  max-height: 600rpx;
  margin-bottom: 30rpx;
}

.problem-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border-left: 6rpx solid #4285f4;
}

.problem-index {
  font-size: 28rpx;
  font-weight: bold;
  color: #4285f4;
  margin-bottom: 10rpx;
}

.problem-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

.result-actions {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}

.error-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #ffebee;
  border-radius: 8rpx;
  border-left: 6rpx solid #f44336;
}

.error-message {
  color: #d32f2f;
  font-size: 28rpx;
}

.action-button {
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
  color: #333;
  border: none;
  min-width: 200rpx;
  text-align: center;
}

.action-button.primary {
  background-color: #4285f4;
  color: white;
}

@media screen and (max-height: 600px) {
  .problems-list {
    max-height: 400rpx;
  }
  
  .preview-image {
    height: 400rpx;
  }
} 

