.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.back-button {
  display: flex;
  align-items: center;
  padding: 10rpx;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #4285f4;
}

.back-text {
  font-size: 28rpx;
  color: #4285f4;
  margin-left: 5rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.camera-section {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.camera-tip {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.camera-actions {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.action-button {
  background-color: #f8f8f8;
  border-radius: 15rpx;
  padding: 30rpx;
  width: 45%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.button-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.button-text {
  font-size: 28rpx;
  color: #333;
}

.preview-section {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.preview-image {
  width: 100%;
  height: 600rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  background-color: #f0f0f0;
}

.preview-actions {
  display: flex;
  justify-content: space-between;
}

.secondary-button, .primary-button {
  width: 48%;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.secondary-button {
  background-color: #f0f0f0;
  color: #666;
}

.primary-button {
  background-color: #4285f4;
  color: #fff;
}

.analyzing-section {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 60rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4285f4;
  border-radius: 50%;
  margin-bottom: 30rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.analyzing-text {
  font-size: 30rpx;
  color: #666;
}

.result-section {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.problem-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.result-actions {
  display: flex;
  justify-content: space-between;
} 

