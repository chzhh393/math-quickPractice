.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.back-button {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 32rpx;
  margin-right: 6rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.error-message {
  background-color: #ffebee;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.error-icon {
  margin-right: 15rpx;
  font-size: 32rpx;
}

.error-text {
  font-size: 26rpx;
  color: #d32f2f;
}

.task-info {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.task-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.task-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f0f0f0;
  color: #666;
}

.task-status.completed {
  background-color: #e6f7e6;
  color: #4caf50;
}

.task-status.in-progress {
  background-color: #e6f0ff;
  color: #3A86FF;
}

.task-date {
  font-size: 24rpx;
  color: #888;
}

.report-summary {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.summary-stats {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.stat-item {
  width: 22%;
  text-align: center;
  padding: 20rpx 0;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #3A86FF;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.problems-list {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.problem-item {
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.problem-item:last-child {
  border-bottom: none;
}

.problem-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.problem-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.problem-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.problem-status.correct {
  background-color: #e6f7e6;
  color: #4caf50;
}

.problem-status.incorrect {
  background-color: #ffebee;
  color: #f44336;
}

.problem-status.unanswered {
  background-color: #f0f0f0;
  color: #999;
}

.problem-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 15rpx;
  background-color: #f9f9f9;
  padding: 15rpx;
  border-radius: 8rpx;
  word-break: break-all;
}

.problem-stats {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.attempt-count, .last-attempt-time {
  display: flex;
  align-items: center;
}

.stat-label {
  margin-right: 10rpx;
}

.view-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #3A86FF;
  padding: 10rpx 0;
}

.arrow {
  font-size: 28rpx;
}

.empty-report {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #ccc;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 