.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.back-button {
  padding: 10rpx 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.problem-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.problem-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.problem-content {
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  color: #444;
  word-break: break-all;
}

.history-list {
  margin-top: 30rpx;
}

.history-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

.history-index {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.history-time {
  font-size: 26rpx;
  color: #888;
}

.answer-section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.answer-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #444;
  background-color: #f9f9f9;
  padding: 15rpx;
  border-radius: 8rpx;
  word-break: break-all;
}

.feedback-content {
  font-size: 28rpx;
  line-height: 1.5;
  color: #444;
  background-color: #f0f7ff;
  padding: 15rpx;
  border-radius: 8rpx;
  word-break: break-all;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.error-message {
  text-align: center;
  color: #e64340;
  font-size: 28rpx;
  margin: 40rpx 0;
}

.no-records {
  text-align: center;
  color: #888;
  font-size: 28rpx;
  margin: 40rpx 0;
} 

