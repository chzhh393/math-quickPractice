.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  background-color: #4285f4;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(66, 133, 244, 0.2);
}

.avatar-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: white;
  overflow: hidden;
  margin-right: 30rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.greeting {
  color: white;
}

.greeting-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.greeting-subtext {
  font-size: 28rpx;
  opacity: 0.9;
}

.main-content {
  padding: 20rpx 0;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #4285f4;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.error-message {
  background-color: #ffebee;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.error-icon {
  margin-right: 15rpx;
  font-size: 32rpx;
}

.error-text {
  font-size: 26rpx;
  color: #d32f2f;
}

.tasks-list {
  margin-top: 20rpx;
}

.task-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.task-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #f0f0f0;
  color: #666;
}

.task-status.completed {
  background-color: #e6f7e6;
  color: #4caf50;
}

.task-status.in-progress {
  background-color: #e6f0ff;
  color: #3A86FF;
}

.task-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.info-label {
  margin-right: 10rpx;
}

.task-progress {
  margin-bottom: 20rpx;
}

.progress-bar {
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background-color: #4285f4;
  border-radius: 8rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

.task-action {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.action-button {
  display: inline-block;
  padding: 12rpx 30rpx;
  background-color: #4285f4;
  color: white;
  font-size: 26rpx;
  border-radius: 30rpx;
}

.empty-tasks {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  color: #ccc;
}

.empty-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #aaa;
} 

