.header {
  background-color: #3A86FF;
  padding: 40rpx 30rpx;
  border-radius: 0 0 30rpx 30rpx;
  margin-bottom: 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #fff;
  margin-right: 20rpx;
}

.welcome {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.content {
  padding: 30rpx;
}

.placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
} 

