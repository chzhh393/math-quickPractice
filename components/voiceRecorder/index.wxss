.voice-recorder {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recording-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
}

.time {
  font-size: 60rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.status-text {
  font-size: 28rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 30rpx;
}

.recorder-btn, .play-btn, .submit-btn {
  height: 140rpx;
  border-radius: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #333;
  background-color: #f8f8f8;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  margin: 0 10rpx;
  padding: 0 30rpx;
}

.recorder-btn {
  background-color: #f8f8f8;
}

.recorder-btn.recording {
  background-color: #ff4d4f;
  color: white;
}

.btn-inner {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  margin-bottom: 8rpx;
}

.record-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #ff4d4f;
}

.recorder-btn.recording .record-icon {
  background-color: white;
}

.play-icon {
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-left: 32rpx solid #3A86FF;
  border-bottom: 20rpx solid transparent;
  margin-left: 8rpx;
}

.submit-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #52c41a;
  position: relative;
}

.submit-icon::after {
  content: "";
  position: absolute;
  width: 15rpx;
  height: 25rpx;
  border-right: 4rpx solid white;
  border-bottom: 4rpx solid white;
  transform: rotate(45deg);
  top: 6rpx;
  left: 12rpx;
}

.disabled {
  opacity: 0.5;
}

.tips {
  width: 100%;
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: #f0f9ff;
  margin-top: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #0077cc;
  line-height: 1.5;
} 

